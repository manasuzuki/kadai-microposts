<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= micropost.content %></p>
        </div>
        <div>
          <% if current_user == micropost.user %>
            <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <!--micropostをdeletemethodに渡して、確認させる-->
          <% end %>
          <%= render 'favorites/favorite_button', micropost: micropost %> 
          <!--each do のmicropostが入るから右にmicropostが入るし、favorite_buttonのなかのmicropostに代入させたいから
          左にmicropostが入る。each do のなかは@つかない-->
        </div>
      </div>
    </li>
  <% end %>

</ul>